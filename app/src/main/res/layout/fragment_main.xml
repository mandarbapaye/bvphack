<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivityFragment">

    <RelativeLayout
        android:id="@+id/llNavButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="true"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:id="@+id/rivPickup"
            android:scaleType="centerCrop"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/test"
            android:layout_gravity="center"
            android:layout_alignParentLeft="true"
            />

        <ImageView
            android:id="@+id/rivPostFood"
            android:scaleType="centerCrop"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/test"
            android:layout_gravity="center"
            android:layout_toRightOf="@id/rivPickup"
            android:layout_marginLeft="50dp"
            />

        <ImageView
            android:id="@+id/rivProfile"
            android:scaleType="centerCrop"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/test"
            android:layout_gravity="center"
            android:layout_alignParentRight="true"
            />

        <ImageView
            android:id="@+id/rivLocation"
            android:scaleType="centerCrop"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/test"
            android:layout_gravity="center"
            android:layout_toLeftOf="@id/rivProfile"
            android:layout_marginRight="50dp"
            />


    </RelativeLayout>

    <ListView
        android:id="@+id/lvPosts"
        android:layout_above="@id/llNavButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:dividerHeight="1px"
        />


</RelativeLayout>
